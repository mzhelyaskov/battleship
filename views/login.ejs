<% layout('layout') -%>

<form class="form-horizontal md-form" action="/login" method="post">
    <h1 class="form-title col-sm-offset-2 col-sm-10">Sign In</h1>
    <div class="form-group">
        <label for="username" class="col-sm-2 control-label">E-mail</label>
        <div class="col-sm-10">
            <input id="username" name="username" type="text" class="form-control" placeholder="Enter your e-mail">
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
            <input id="password" name="password" type="password" class="form-control" placeholder="Min. 8 Characters">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label><input type="checkbox" name="rememberme"> Remember me</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Sign in</button>
        </div>
    </div>
</form>