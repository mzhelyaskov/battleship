<% layout('layout') -%>

<form class="form-horizontal md-form" action="/login" method="post">
    <% if (message) { %>
        <div class="alert alert-info" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <%= message %>
        </div>
    <% } %>
    <h1 class="form-title col-sm-offset-2 col-sm-10">Sign In</h1>

    <div class="form-group <%- errors.username && 'has-error' %>">
        <label for="username" class="col-sm-2 control-label">Username</label>
        <div class="col-sm-10">
            <input id="username" name="username" type="text" class="form-control form-control-danger" placeholder="Enter your username">
            <% if (errors.username) { %><span class="help-block"><%= errors.username.msg %></span><% } %>
        </div>
    </div>

    <div class="form-group <%- errors.password && 'has-error' %>">
        <label for="password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
            <input id="password" name="password" type="password" class="form-control" placeholder="Min. 8 Characters">
            <% if (errors.password) { %><span class="help-block"><%= errors.password.msg %></span><% } %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Let's play</button>
        </div>
    </div>
</form>